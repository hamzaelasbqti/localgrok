<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 
    Allow cleartext (HTTP) traffic to all domains.
    Required for connecting to local Ollama servers on the network.
    The Ollama server typically runs on HTTP, not HTTPS.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
